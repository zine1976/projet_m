{% extends 'base.html.twig' %}

{% block title %}Adressefact{% endblock %}

{% block body %}
    <h1 class="tit">Adresse de facturation</h1>

    <table class="table">
        <tbody>
				{% if is_granted('ROLE_ADMIN') %}

            <tr>
                <th>Id</th>
                <td>{{ adressefact.id }}</td>
            </tr>
				{% endif %}

            <tr>
                <th>Nom</th>
                <td>{{ adressefact.nom }}</td>
            </tr>
            <tr>
                <th>Numero</th>
                <td>{{ adressefact.numero }}</td>
            </tr>
            <tr>
                <th>Rue</th>
                <td>{{ adressefact.rue }}</td>
            </tr>
            <tr>
                <th>Cp</th>
                <td>{{ adressefact.cp }}</td>
            </tr>
            <tr>
                <th>Ville</th>
                <td>{{ adressefact.ville }}</td>
            </tr>
            <tr>
                <th>Pays</th>
                <td>{{ adressefact.pays }}</td>
            </tr>
            <tr>
                <th>Info</th>
                <td>{{ adressefact.info }}</td>
            </tr>
            <tr>
                <th>Societe</th>
                <td>{{ adressefact.societe }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ adressefact.tel }}</td>
            </tr>
				{% if is_granted('ROLE_ADMIN') %}
            <tr>
                <th>Nom_prenom</th>
                <td>{{ adressefact.nomPrenom }}</td>
            </tr>
				{% endif %}
        </tbody>
    </table>

    <a href="{{ path('app_adressefact_index') }}">retour a la liste</a>

    <a href="{{ path('app_adressefact_edit', {'id': adressefact.id}) }}">modifier mon adresse</a>

    {{ include('adressefact/_delete_form.html.twig') }}
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
	<div class="compte">
<h1>Connexion</h1>
	</div>
	<div class="login">

<div class="col-4"
<p>tu n'es pas encore inscrit?</p>
<a name="" id="" class="btn btn-primary" href="{{path('app_register')}}" role="button">inscription</a>
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal">connecte toi</h1>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
<div class="buttlogin">
    <button class="btn btn-lg btn-primary" type="submit">
        Connexion
    </button>
    </div>
</form>
<a name="" id="" class="btn btn-primary" href="{{path('app_forgot_password_request')}}" role="button">mot de passe oubli√©?</a>

</div>
<div class="col-4">
			<img src="{{asset("peinture.jpg")}}" alt="" class="img-fluid thumbnail">

		</div>
        </div>
{% endblock %}

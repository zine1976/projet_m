{% extends 'base.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
<nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="{{path('app_user_show',{id: app.user.id})}}">Mon compte</a></li>

    <li class="breadcrumb-item"><a href="{{path('app_commande_index', {id: app.user.id})}}">Mes commandes</a></li>
    <li class="breadcrumb-item active" aria-current="page">vous êtes ici</li>
  </ol>
</nav>
    <h1>Commande</h1>

    <table class="table">
        <tbody>
            {% if is_granted('ROLE_ADMIN') %}

            <tr>
                <th>Id</th>
                <td>{{ commande.id }}</td>
            </tr>
            {% endif %}
                <th>numero de commande</th>
                <td>{{ commande.numcom }}</td>

            <tr>
                <th>Date de commande</th>
                <td>{{ commande.datecom ? commande.datecom|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ commande.etat }}</td>
            </tr>
            <tr>
                <th>client</th>
                <td>{{ commande.user.nom}}</td>
            </tr>
                {% for cp in commande.commandeProduits %}

             <tr>
                <th>produit</th>
                <td>{{ cp.produit.nom}}</td>
            </tr> <tr>
                <th>image</th>
                <td>							<img src="{{ asset("uploads/" ~ cp.produit.image) }}" alt="" class="imgreg img-fluid thumbnail">
</td>
            </tr>
            <tr>
                <th>quantité</th>
                <td>{{ cp.quantite}}</td>
            </tr>
                {% endfor %}

        </tbody>
    </table>
            {% if is_granted('ROLE_ADMIN') %}

    <a href="{{ path('app_commande_index') }}">liste</a>

    <a href="{{ path('app_commande_edit', {'id': commande.id}) }}">modifier</a>

    {{ include('commande/_delete_form.html.twig') }}
            {% endif %}

{% endblock %}
